{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ program.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ program.city }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ program.date ? program.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Schedule</th>
                <td>{{ program.schedule }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('program_index') }}">back to list</a>

    <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base_admin.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}{{ parent() }}

    <div class="jumbotron">
        <h1 class="m-5 text-center">Programme</h1>

        <a href="{{ path('program_index') }}">back to list</a><br>

        <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>
    </div>

    <div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ program.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ program.city }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ program.date ? program.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Schedule</th>
                <td>{{ program.schedule }}</td>
            </tr>
        </tbody>
    </table>


        {{ include('program/_delete_form.html.twig', {'button_label': 'Supprimer'}) }}
    </div>
{% endblock %}

{% extends 'base_admin.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}{{ parent() }}

    <div class="jumbotron">
        <h1 class="m-5 text-center">Liste des programmes</h1>
        <a href="{{ path('program_new') }}">Create new</a>
    </div>

    <div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Date</th>
                <th>Schedule</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>

                <td>{{ program.name }}</td>
                <td>{{ program.city }}</td>
                <td>{{ program.date ? program.date|date('Y-m-d') : '' }}</td>
                <td>{{ program.schedule }}</td>
                <td>
                    <a href="{{ path('program_show', {'id': program.id}) }}">show</a>
                    <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
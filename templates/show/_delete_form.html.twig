    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ show.id) }}">
    <div>
    <div class="row mt-4">
        <button class="btn btn-danger  col-lg-3 m-auto">{{ button_label|default('Supprimer') }}</button>
    </div>
    </div>
</form>
